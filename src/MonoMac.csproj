<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net45;netstandard2.0</TargetFrameworks>
    <BaseDefines Condition="$(BaseDefines) == ''">MONOMAC;SDCONVERT</BaseDefines>
    <Version>0.0.1</Version>
    <EnableDefaultItems>False</EnableDefaultItems>
    <PlatformTarget>AnyCpu</PlatformTarget>
  </PropertyGroup>
  <PropertyGroup Condition="$(Platform) == 'x64'">
    <BaseDefines>$(BaseDefines);MAC64</BaseDefines>
  </PropertyGroup>
  <PropertyGroup Condition="$(Platform) == 'x86'">
  </PropertyGroup>
  <PropertyGroup>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <DefineConstants>$(BaseDefines)</DefineConstants>
    <NoWarn>3021,0219,0414,114,108,612,618,4014</NoWarn>
    <GeneratorBuildProperties>BaseDefines=$(BaseDefines);BaseNamespace=MonoMac.ObjCRuntime</GeneratorBuildProperties>
  </PropertyGroup>
  <ItemGroup Condition="$(TargetFramework.StartsWith('netstandard')) == 'False'">
    <Reference Include="System.Net.Http" />
  </ItemGroup>
  <ItemGroup Condition="$(TargetFramework.StartsWith('netstandard')) == 'True'">
    <PackageReference Include="System.Reflection.Emit" Version="4.7.0" />
    <PackageReference Include="System.Reflection.Emit.Lightweight" Version="4.7.0" />
    <PackageReference Include="System.Runtime.InteropServices" Version="4.3.0" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="generator.csproj" ReferenceOutputAssembly="False" />
  </ItemGroup>
  <ItemGroup>
    <Compile Include="@(CoreSource)" />
    <Compile Include="@(SharedSource)" />
    <Compile Include="@(SharedCoreSource)" />
    <Compile Include="@(BaseSource)" />
    <Compile Include="@(OpenGlSource)" />
    <Compile Include="@(CFNetworkSource)" />
  </ItemGroup>
  <Target Name="IncludeGeneratedSource" BeforeTargets="BeforeBuild">
    <ItemGroup>
	    <Compile Include="$(ArtifactsDir)generated\$(Platform)\**\*.cs" Visible="False" />
    </ItemGroup>
  </Target>
</Project>